<!DOCTYPE html>
<html>
  <head>
    <title>OVP</title>
    <%= csrf_meta_tags %>


    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">


          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

        <%= link_to image_tag('qush-logo2.png', alt: "Logo", :class => "logo-header"), root_path %>
        </div>

        <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
          <div id="navbar" class="navbar-mobile-dropdown">

            <% if current_user %>
              <ul class="nav navbar-nav pull-right">
                <li class="user-name hidden-xs">Hi, <%= current_user.first_name %></li>


                <li class="dropdown hidden-xs">
                  <a id="dLabel" data-target="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <%= image_tag current_user.image_url, alt: current_user.first_name, :class => "user-profile-pic"  %>
                  </a>

                  <ul class="dropdown-menu centerDropdown" aria-labelledby="dropdownMenu1">
                     <li><a href="#">Watch the goodnes</a></li>
                     <li><a href="#">My kush</a></li>
                     <li><a href="#" data-toggle="modal" data-target="#myModal">Categories</a></li>
                     <li><%= link_to 'Log out', logout_path, method: :delete %></li>
                     <li role="separator" class="divider"></li>
                     <li><a href="#">Add a video kush!</a></li>
                  </ul>

                </li>

                <li class="hidden-sm hidden-md hidden-lg"><a href="#">Watch the goodnes</a></li>
                <li class="hidden-sm hidden-md hidden-lg"><a href="#">My kush</a></li>
                <li class="hidden-sm hidden-md hidden-lg"><a href="#">Categories</a></li>
                <li class="hidden-sm hidden-md hidden-lg"><%= link_to 'Log out', logout_path, method: :delete %></li>
                <li class="hidden-sm hidden-md hidden-lg"role="separator" class="divider"></li>
                <li class="hidden-sm hidden-md hidden-lg"><a href="#">Add a video kush!</a></li>


              </ul>




            <% end %>

            <ul class="nav navbar-nav">

            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>




      <!-- Categories Modal -->
      <% if current_user %>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Select your categories</h4>
              </div>
              <div class="modal-body">

                <select multiple="multiple" class="image-picker category-image-picker show-html">

                  <%= @categories.each do |category|%>
                  <option data-img-src="<%= category.category_image.url %>" value="<%= category.id %>" <%= if current_user.categories.include? category; "selected"; end %>> <%= category.name %></option>
                  <% end %>


                </select>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      <% end%>

  </body>
</html>
