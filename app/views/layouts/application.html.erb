<!DOCTYPE html>
<html>
  <head>
    <title>OVP</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Slab" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
  </head>

  <body>

    <nav class="navbar navbar-default">
        <!-- container was here -->
      <div class="col-sm-3">
        <div class="navbar-header center-nav-contents nav-actions">


          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>




          <a href="#" data-toggle="modal" data-target="#myModal" class ="category-modal-nav button-disable"><i class="material-icons">view_module</i></a>
          <i class="material-icons">play_arrow</i>
          <%= link_to next_video_path do %><i class="material-icons">gesture</i><% end %>
          <%= link_to new_video_path do %>
          <i class="material-icons">add</i>
          <% end %>


        </div>
      </div>


        <div class="col-sm-6 center-nav-content">

            <%= link_to image_tag('qush-logo-light2.png', alt: "Logo", :class => "logo-header"), root_path %>
            <!-- <span class="glyphicon glyphicon-plus nav-action-buttons" aria-hidden="true"></span> -->


            <!-- <button type="button" class="btn btn-primary btn-lg outline">Add video</button> -->
        </div>

      <div class="col-sm-3">

        <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">

          <div id="navbar" class="navbar-mobile-dropdown">

            <% if current_user %>



              <ul class="nav navbar-nav pull-right">
                <li class="user-name hidden-xs">Hi, <%= current_user.first_name %></li>


                <li class="dropdown hidden-xs">
                  <a id="dLabel" data-target="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <%= image_tag current_user.image_url, alt: current_user.first_name, :class => "user-profile-pic"  %>
                  </a>

                  <ul class="dropdown-menu centerDropdown" aria-labelledby="dropdownMenu1">
                     <li><a href="#">Watch videos</a></li>
                     <li><a href="/user/profile/<%= current_user.id%>">My profile</a></li>
                     <li><%= link_to 'Following', follow_path, method: :get %></li>
                     <li><a href="#" data-toggle="modal" data-target="#myModal" class ="category-modal-nav button-disable">Categories</a></li>
                     <li><%= link_to 'Log out', logout_path, method: :delete %></li>
                     <li role="separator" class="divider"></li>
                     <li><a href="#">Add a video!</a></li>
                  </ul>

                </li>

                <li class="hidden-sm hidden-md hidden-lg"><a href="#">Watch videos</a></li>
                <li class="hidden-sm hidden-md hidden-lg"><a href="/user/profile/<%= current_user.id%>">My profile</a></li>
                <li class="hidden-sm hidden-md hidden-lg"><%= link_to 'Following', follow_path, method: :get %></li>
                <li class="hidden-sm hidden-md hidden-lg"><a href="#" data-toggle="modal" data-target="#myModal" class ="category-modal-nav button-disable">Categories</a></li>
                <li class="hidden-sm hidden-md hidden-lg"><%= link_to 'Log out', logout_path, method: :delete %></li>
                <li class="hidden-sm hidden-md hidden-lg"role="separator" class="divider"></li>
                <li class="hidden-sm hidden-md hidden-lg"><a href="#">Add a video!</a></li>


              </ul>




            <% end %>

            <ul class="nav navbar-nav">

            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>




    <%= render :partial => "/layouts/categories_modal" %>

  </body>
</html>
