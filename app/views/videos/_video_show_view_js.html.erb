      width: '100%',
      videoId: youtube_id,
      playerVars: {'controls': 1, 'iv_load_policy':3, 'color': 'white', 'showinfo':0, 'modestbranding':1},
      events: {
        'onReady': onPlayerReady,
        'onStateChange': onPlayerStateChange
      }
    });
  }

